{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Problem",
  "description": "Schema for assignment metadata.",
  "properties": {
    "title": {
      "type": "string"
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "pattern": ".+@.+\\..+"
          }
        },
        "required": [
          "name",
          "email"
        ]
      }
    },
    "grading": {
      "type": "object",
      "properties": {
        "minutes": {
          "type": "number"
        },
        "automated": {
          "type": "boolean"
        },
        "review": {
          "type": "boolean"
        },
        "manual": {
          "type": "boolean"
        }
      },
      "required": [
        "minutes",
        "automated",
        "review",
        "manual"
      ]
    },
    "topics": {
      "type": "array",
      "items": {
        "type": "string",
        "minItems": 1
      }
    }
  },
  "required": [
    "title",
    "authors",
    "grading"
  ]
}

{
  "$schema": "http://json-schema.org/schema#",
  "description": "Schema for networkutil device config",

  "definitions": {

    "device": {
      "type": "object",
      "properties": {
        "ip":  {"type": "string"},
        "port": {"type": "number"},
        "active": {"type": "boolean"},
        "default": {"type": "boolean"}
      },
      "required": ["ip", "port", "active", "default"],
      "additionalProperties": false
    }

  },

  "type": "object",
  "additionalProperties": { "$ref": "#/definitions/device" }
}
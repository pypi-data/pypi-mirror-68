"""

"""

import os
import fire


def main(input_text, h=False, p=False):
    if h:
        text = str(input_text)
        hex_text = "".join("{:02x}".format(ord(c)) for c in text)
        print("'%s'" % (hex_text))
    if p:
        text = str(input_text)
        text = bytearray.fromhex(text).decode()
        print("'%s'" % (text))


if __name__ == "__main__":
    fire.Fire(main)

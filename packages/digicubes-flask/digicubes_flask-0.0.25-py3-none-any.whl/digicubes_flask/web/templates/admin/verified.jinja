{% extends "admin/base.jinja" %}
{% import "macros/forms.jinja" as forms %}

{% block main_content %}
<div class="section">
    <div class="row">
        <div class="col s12">
            <h2>Congratulation {{ user.first_name }}</h2>
            <p>Your account has been successfully verified.</p>
        </div>
    </div>
</div>
<div class="section">
    <div class="row">
        <div class="col s12">
            <h3>Now set your password</h3>
        </div>
    </div>
    <div class="row">
        <div class="col s12" id="dc_main">
            <form method="POST" action="{{ action }}">
                {{ form.csrf_token }}
                {{ forms.row(form, "password") }}
                {{ forms.row(form, "confirm") }}
                {{ forms.submit(form) }}
            </form>
        </div>
    </div>
</div>
{% endblock %}
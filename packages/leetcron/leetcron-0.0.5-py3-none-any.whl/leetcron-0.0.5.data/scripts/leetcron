#!python
#!/usr/bin/env python

import sys
import leetcron

functions = {
    "setup": leetcron.setup,
    "run": leetcron.run
}

if len(sys.argv) >= 2:
    if sys.argv[1] not in functions:
        print('Invalid option.')
        exit()
    if sys.argv[1] == 'run':
        functions[sys.argv[1]]()
    else:
        functions[sys.argv[1]](sys.argv[2] if len(sys.argv) == 3 and sys.argv[1] == 'setup' else None)
else:
    print('Please specify usage.')